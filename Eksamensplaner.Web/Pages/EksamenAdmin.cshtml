@page
@model Eksamensplaner.Pages.EksamenAdmin
@{
    ViewData["Title"] = "Administrationspanel - Registrering af eksamen";
}

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/EksamenAdmin.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Eksamensplaner.styles.css" asp-append-version="true" />
</head>
<!DOCTYPE html>

<body>
<section class="admin-section">

<h1 class="admin-title">Registrering af eksamen</h1>

<div class="admin-container">
    
    <!-- Underviser registrering -->
    <div class="admin-box">
        <h2>Registrer eksamen for underviser</h2>
        
        <form method="post" asp-page-handler="Teacher">
            
            <div class="field-group">
                <label for="teacher-holdid">Hold ID</label>
                <input type="text" id="teacher-holdid" name="teacher-holdid" placeholder="Hold ID" />
            </div>
            
            <div class="field-group">
                <label>Navn</label>
                <input type="text" name="UnderviserNavn" placeholder="Navn" />
            </div>
            
            <div class="field-group">
                <label for="teacher-proevenavn">Prøvenavn</label>
                <input type="text" id="teacher-proevenavn" name="teacher-proevenavn" placeholder="Prøvenavn" />
            </div>
            
            <div class="field-row">
                <div class="field-group half">
                    <label for="teacher-form">Form</label>
                    <select id="teacher-form" name="teacher-form">
                        <option value="">Vælg form</option>
                        <option>Mundtlig</option>
                        <option>Skriftlig</option>
                        <option>Mundtlig + Projekt</option>
                    </select>
                </div>
                
                <div class="field-group half">
                    <label for="teacher-type">Eksamens-type</label>
                    <select id="teacher-type" name="teacher-type">
                        <option value="">Vælg type</option>
                        <option>Eksamen</option>
                        <option>Re-Eksamen</option>
                    </select>
                </div>
            </div>
            
            <div class="field-row">
                <div class="field-group half">
                    <label for="teacher-date">Dato</label>
                    <input type="date" id="teacher-date" name="teacher-date" />
                </div>
                
                <div class="field-group half">
                    <label for="teacher-role">Rolle</label>
                    <select id="teacher-role" name="teacher-role">
                        <option value="">Vælg rolle</option>
                        <option>Eksaminator</option>
                        <option>Censor</option>
                    </select>
                </div>
            </div>
            
            <div class="field-row">
                <div class="field-group half">
                    <label for="teacher-starttime">Starttid</label>
                    <input type="time" id="teacher-starttime" name="teacher-starttime" />
                </div>
                
                <div class="field-group half">
                    <label for="teacher-endtime">Sluttid</label>
                    <input type="time" id="teacher-endtime" name="teacher-endtime" />
                </div>
            </div>
            
            <div class="field-row">
                <div class="field-group half">
                    <label for="teacher-antal">Antal studerende</label>
                    <input type="number" id="teacher-antal" name="teacher-antal" min="1" placeholder="Antal studerende" />
                </div>
                
                <div class="field-group half tilsyn-group">
                    <label for="teacher-tilsyn">Tilsyn (Vagt)</label>
                    <div class="tilsyn-checkbox">
                        <input type="checkbox" id="teacher-tilsyn" name="teacher-tilsyn" />
                        <span>Der er tilsyn til prøven</span>
                    </div>
                </div>
            </div>
            
            <button type="submit" class="admin-button">
                Gem eksamen for underviser
            </button>
        </form>
    </div>


<!-- Studerende registrering -->

<div class="admin-box">
    <h2>Registrer eksamen for studerende</h2>
    
    <form method="post" asp-page-handler="Student">
        
        <div class="field-group">
            <label for="student-holdid">Hold ID</label>
            <input type="text" id="student-holdid" name="student-holid"placeholder="Hold ID" />
        </div>
        
        <div class="field-group">
            <label>Navn</label>
            <input type="text" name="StuderendeNavn" placeholder="Navn" />
        </div>
        
        <div class="field-group">
            <label for="student-proevenavn">Prøvenavn</label>
            <input type="text" id="student-proevenavn" name="student-proevenavn" placeholder="Prøvenavn" />
        </div>
        
        <div class="field-row">
            <div class="field-group half">
                <label for="student-form">Form</label>
                <select id="student-form" name="student-form">
                    <option value="">Vælg form</option>
                    <option>Mundtlig</option>
                    <option>Skriftlig</option>
                    <option>Mundtlig + Projekt</option>
                </select>
            </div>
            
            <div class="field-group half">
                <label for="student-type">Eksamens-type</label>
                <select id="student-type" name="student-type">
                    <option value="">Vælg type</option>
                    <option>Eksamen</option>
                    <option>Re-Eksamen</option>
                </select>
            </div>
        </div>
        
        <div class="field-row">
            <div class="field-group half">
                <label for="student-date">Dato</label>
                <input type="date" id="student-date" name="student-date" />
            </div>
        </div>
        
        <div class="field-group">
            <label for="student-time">Tidspunkt</label>
            <input type="time" id="student-time" name="sstudent-time" />
        </div>
        
        <div class="field-group tilsyn-group">
            <label for="student-tilsyn">Tilsyn (Vagt)</label>
            <div class="tilsyn-checkbox">
                <input type="checkbox" id="student-tilsyn" name="student-tilsyn" />
                <span>Der er tilsyn til prøven</span>
            </div>
        </div>
        
        <button type="submit" class="admin-button">
            Gem eksamen for studerende
        </button>
    </form>
</div>

</div>

</section>
</body>
</html>